{
  "seed": 9,
  "dataset": {
    "name": "snli",
    "use_lemmatized": false
  },
  "embeddings": {
    "main": {
      "dim": 300,
      "file": "gcc840.h5",
      "vocab": "default"
    }
  },
  "streams": {
    "train": {
      "batch_size": 32,
      "fraction": 1.0,
      "shuffle": true
    },
    "dev": {
      "batch_size": 133,
      "fraction": 1.0,
      "shuffle": false
    },
    "test": {
      "batch_size": 307,
      "fraction": 1.0,
      "shuffle": false
    },
    "breaking": {
      "batch_size": 3,
      "fraction": 1.0,
      "shuffle": false
    }
  },
  "batch_transformers": [
    {
      "name": "indexer",
      "vocab": "default"
    },
    {
      "name": "padder"
    }
  ],
  "vocabs": {
    "default": {
      "file_or_data": "vocab_all.txt",
      "specials_check": true
    }
  },
  "trainer": {
    "clip_norm": 10.0,
    "early_stopping": {
      "monitor": "val_prediction_acc",
      "patience": 7
    },
    "learning_rate": 0.0004,
    "learning_rate_scheduler": {
        "type": "reduce_on_plateau",
        "monitor": "val_prediction_acc",
        "factor": 0.5,
        "mode": "max",
        "patience": 1
    },
    "loss": ["categorical_crossentropy", "mean_squared_error_matrix"],
    "loss_weights": [1.0, 0.001],
    "loss_target_names": [
      "dot_restored"
    ],
    "metrics": ["accuracy"],
    "num_epochs": 50,
    "optimizer": "adam",
    "save_best": true,
    "save_every_epoch": false
  },
  "model": {
    "dropout": 0.5,
    "read_knowledge": false,
    "embeddings": {
      "main": {
        "name": "main",
        "trainable": false
      }
    },
    "encoder": {
      "name": "input_encoder",
      "cudnn": true,
      "units": 300,
      "initializer": "orthogonal",
      "regularizer": "l2",
      "regularizer_strength": 0.0
    },
    "restorer": {

    },
    "inference": {
      "similarity": "dot"
    },
    "projection": {
      "activation": "relu",
      "regularizer": "l2",
      "regularizer_strength": 0.0,
      "units": 300
    },
    "inference_encoder": {
      "name": "inference_encoder",
      "cudnn": true,
      "units": 300,
      "initializer": "orthogonal",
      "regularizer": "l2",
      "regularizer_strength": 0.0
    },
    "pooling": {
      "operations": ["avg", "max"]
    },
    "feed_forwards": [
      {
        "name": "ff1",
        "units": 300,
        "activation": "tanh",
        "regularizer": "l2",
        "regularizer_strength": 0.0
      },
      {
        "name": "logits",
        "units": 3,
        "activation": "softmax",
        "regularizer": "l2",
        "regularizer_strength": 0.0
      }
    ]
  }
}